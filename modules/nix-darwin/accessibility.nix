{
  system.defaults.CustomSystemPreferences."com.apple.universalaccess" = {
    # Disable mouse keys
    mouseDriver = false;
    # Disable sticky keys
    stickyKey = false;
    # Disable slow keys
    slowKey = false;
    # Disable switch control
    switchOnOffKey = false;
    # Disable VoiceOver hotkey
    voiceOverOnOffKey = false;
    # Enable trackpad gestures for zoom
    closeViewTrackpadGestureZoomEnabled = true;
    # Disable zoom with scroll wheel
    closeViewScrollWheelToggle = false;
    # Set zoom factor
    closeViewZoomFactor = 1.0;
  };
}
